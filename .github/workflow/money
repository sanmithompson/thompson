name: Secure CI/CD Pipeline

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  secure-pipeline:
    runs-on: ubuntu-latest

    steps:
      # ðŸŸ¦ Checkout source code (copy-paste)
      - name: Checkout code
        uses: actions/checkout@v3

      # ðŸ”µ Set up Java (or change to your runtime, e.g., node.js, python, etc.)
      - name: Set up JDK 17
        uses: actions/setup-java@v3
        with:
          java-version: '17'
          distribution: 'temurin'

      # ðŸ”´ SonarQube Scan (you'll update the projectKey and token manually)
      - name: SonarQube Scan
        uses: sonarsource/sonarqube-scan-action@v1.1.0
        with:
          projectBaseDir: ./abd
        env:
          SONAR_HOST_URL: ${{ secrets.SONAR_HOST_URL }}  # ðŸŸ¦ Store this in GitHub secrets
          SONAR_TOKEN: ${{ secrets.SONAR_TOKEN }}        # ðŸŸ¦ Also in GitHub secrets
          SONAR_PROJECT_KEY: '23456'                     # ðŸ”´ Your project key
          SONAR_PROJECT_NAME: 'learning'                 # ðŸ”´ Your project name

      # ðŸ”´
